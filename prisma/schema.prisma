generator client {
  provider = "prisma-client-js"
}

datasource db {
  url          = env("DATABASE_URL")
  provider     = "mongodb"
  relationMode = "prisma"
}

model PhoneCasePhoto {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  public_id       String
  imageUrl        String
  width           Int
  height          Int
  croppedImageUrl String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
